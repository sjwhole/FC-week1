<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="0dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pn_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/agumon"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/pn_textAnchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pn_profile"
        android:layout_marginLeft="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/namepn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pn_textAnchor"
        android:text="Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pn_textAnchor"
        android:layout_below="@+id/namepn"
        android:fontFamily="@font/notosans_thin"
        android:gravity="top"
        android:text="01012341234"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/call"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_baseline_call_24" />

</RelativeLayout>